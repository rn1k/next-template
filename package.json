        "tslint": "^5.12.1",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "tslint-react": "^3.6.0",
        "typescript": "^2.7.2",
        "typescript-fsa": "^3.0.0-beta-2",
        "typescript-fsa-reducers": "^1.2.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rn1k/next-template"
    },
    "author": "@m1k__ (https://twitter.com/m1k__)",
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint --fix",
            "git add"
        ],
        "*.{js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "useTabs": false
    }
}
