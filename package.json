{
    "name": "with-jest-typescript",
    "version": "1.0.0",
    "scripts": {
        "test": "jest",
        "dev": "next src",
        "build": "next build src",
        "start": "next start src",
        "precommit": "lint-staged"
    },
    "dependencies": {
        "next": "^7.0.2",
        "react": "^16.8.1",
        "react-dom": "^16.8.1"
    },
    "devDependencies": {
        "@types/jest": "^23.0.0",
        "@types/next": "^2.4.8",
        "@types/react": "^16.0.41",
        "@types/react-dom": "^16.0.4",
        "@zeit/next-typescript": "1.1.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^23.6.0",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "husky": "^1.3.1",
        "jest": "^23.6.0",
        "lint-staged": "^8.1.3",
        "prettier": "^1.16.4",
        "react-addons-test-utils": "^15.6.2",
        "react-test-renderer": "^16.2.0",
        "tslint": "^5.12.1",
        "tslint-config-airbnb": "^5.11.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "tslint-react": "^3.6.0",
        "typescript": "^2.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint --fix",
            "git add"
        ],
        "*.{js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "useTabs": false
    }
}
