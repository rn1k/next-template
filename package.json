{
    "name": "nextjs-template",
    "version": "1.0.0",
    "main": "src/server.js",
    "scripts": {
        "test": "jest",
        "dev": "node src/server.js",
        "build": "next build src",
        "start": "NODE_ENV=production node src/server.js",
        "precommit": "lint-staged",
        "storybook": "start-storybook -p 9001 -c .storybook"
